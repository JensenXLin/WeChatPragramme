.user-profile {
  background-color: #fff;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
}

.user-avatar {
  margin-right: 32rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 28rpx;
  color: #999;
}

.user-verified {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.verified {
  color: #07c160;
}

.unverified {
  color: #fa5151;
}

.verified-icon, .unverified-icon {
  margin-right: 8rpx;
}

.menu-list {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.badge {
  background-color: #ff4d4f;
  color: #fff !important;
  font-size: 24rpx !important;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  min-width: 36rpx;
  text-align: center;
}

.verify-modal {
  width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.verify-header {
  padding: 32rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  border-bottom: 2rpx solid #f5f5f5;
}

.verify-form {
  padding: 40rpx 32rpx;
}

.verify-footer {
  display: flex;
  border-top: 2rpx solid #f5f5f5;
  padding: 20rpx;
  gap: 20rpx;
} 