.container {
  padding-bottom: 160rpx;
}

.form-container {
  padding: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.upload-title {
  padding: 30rpx 32rpx 20rpx;
  font-size: 28rpx;
  color: #999;
}

.upload-button {
  width: 160rpx !important;
  height: 160rpx !important;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 32rpx 32rpx;
  border: 2rpx dashed #ddd !important;
}

.contact-group {
  padding-bottom: 0;
}

.contact-info {
  padding: 20rpx 30rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.contact-tip {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.contact-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #0052d9;
  font-weight: 500;
}

.contact-note {
  font-size: 24rpx;
  color: #999;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 6rpx rgba(0,0,0,0.05);
  gap: 20rpx;
}

.picker-container {
  background-color: #fff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  overflow: hidden;
}

.picker-header {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.picker-cancel {
  font-size: 28rpx;
  color: #999;
}

.picker-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
}

.picker-confirm {
  font-size: 28rpx;
  color: #0052d9;
  font-weight: 500;
}

.custom-picker {
  height: 400rpx;
}

.picker-view {
  width: 100%;
  height: 100%;
}

.picker-view-column-item {
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
} 