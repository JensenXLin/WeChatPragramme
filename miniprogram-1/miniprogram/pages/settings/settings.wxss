.container {
  padding-bottom: 120rpx;
}

.settings-header {
  padding: 40rpx 30rpx;
  background-color: #fff;
}

.header-title {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.header-desc {
  font-size: 28rpx;
  color: #999;
}

.settings-section {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.section-title {
  padding: 30rpx;
  font-size: 28rpx;
  color: #999;
  border-bottom: 1rpx solid #f5f5f5;
}

.verified-text {
  color: #07c160 !important;
  font-weight: 500 !important;
}

.unverified-text {
  color: #fa5151 !important;
  font-weight: 500 !important;
}

.logout-btn {
  margin: 60rpx 30rpx;
}

.modal {
  width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  padding: 32rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border-bottom: 2rpx solid #f5f5f5;
}

.modal-content {
  padding: 40rpx 32rpx;
}

.modal-footer {
  display: flex;
  border-top: 2rpx solid #f5f5f5;
  padding: 20rpx;
  gap: 20rpx;
} 